{% extends 'admin.html.twig' %}

{% block title %}Export{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 ">
            <h3>Export Manager</h3> 
            <a href="{{path('export_create')}}">
            <button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>ExportID</th>                            
                            <th>User name</th>
                            <th>Time</th>
                            <th></th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for e in exports %}
                              <tr>
                                  <td>{{ e.id}}</td>
                                  <td>{{ e.ExUser}}</td>
                                  <td>{{ e.time|date("d/m/Y")}}</td>
                                  <td><a href="{{path('exportdetail_show',{'id':e.id})}}">View</a></td>
                                  <td><a href="{{path('exportdetail_add',{'id':e.id})}}">
                                  Add an detail in order {{e.id}}</a></td>
                                  <td><a href="{{path('export_edit',{'id':e.id})}}">Edit</a></td>
                                  <td><a href="{{path('export_delete',{'id':e.id})}}">Delete</a></td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}
