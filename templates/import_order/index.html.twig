{% extends 'admin.html.twig' %}

{% block title %}Import{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 ">
                    <h3>Import Manager</h3> 
                    <a href="{{path('import_create')}}">
                    <button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">              
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>ImportID</th>                            
                            <th>User name</th>
                            <th>Time</th>
                            <th></th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                        {% for i in imports %}
                          <tr>
                            <td>{{ i.id}}</td>
                            <td>{{ i.ImUser}}</td>
                            <td>{{ i.time|date("d/m/Y")}}</td>
                            <td><a href="{{path('importdetail_show',{'id':i.id})}}">View</a></td>
                            <td><a href="{{path('importdetail_add',{'id':i.id})}}"
                            >Add an detail in order {{i.id}}</a></td>
                            <td><a href="{{path('import_edit',{'id':i.id})}}">Edit</a></td>
                            <td><a href="{{path('import_delete',{'id':i.id})}}">Delete</a></td>
                          </tr>
                        {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}
