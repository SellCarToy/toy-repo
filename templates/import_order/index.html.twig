{% extends 'admin.html.twig' %}

{% block title %}Import{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 ">
                    <h3>Manager</h3> <a href="{{path('import_create')}}"><button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>ImportID</th>                            
                            <th>UserID</th>
                            <th>Time</th>
                            <th>Total Price</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for i in imports %}
                              <tr>
                                  <td>{{ i.id}}</td>
                                  <td>{{ i.im_user_id}}</td>
                                  <td>{{ i.time|date("m/d/Y")}}</td>
                                  <td><span>&#0036;</span>{{ i.Total_Price}}</td>
                                  <td><a href="{{path('importdetail_show',{'id':i.id})}}">View detail of order {{i.id}}</a></td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}
